<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".event.CreateEventActivity">

    <Spinner
        android:id="@+id/createEvent_startHour"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/createEvent_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="16dp"
        android:entries="@array/start_hour_arrays"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/createEvent_startMin"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:layout_below="@+id/createEvent_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="57dp"
        android:entries="@array/start_minute_arrays" />

    <Spinner
        android:id="@+id/createEvent_startYear"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/createEvent_endDay"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="16dp"
        android:entries="@array/start_year_arrays" />

    <Spinner
        android:id="@+id/createEvent_endDay"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/createEvent_startDay"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="16dp"
        android:entries="@array/end_month_arrays" />

    <Spinner
        android:id="@+id/createEvent_startDay"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/createEvent_endHour"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="16dp"
        android:entries="@array/start_month_arrays" />

    <Spinner
        android:id="@+id/createEvent_endHour"
        android:layout_width="151dp"
        android:layout_height="41dp"
        android:layout_below="@+id/createEvent_startHour"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="16dp"
        android:entries="@array/end_hour_arrays" />

    <Spinner
        android:id="@+id/createEvent_endMonth"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/createEvent_startMonth"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:entries="@array/end_day_arrays" />

    <Spinner
        android:id="@+id/createEvent_startMonth"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/createEvent_endMin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:entries="@array/start_day_arrays" />

    <Spinner
        android:id="@+id/createEvent_endYear"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/createEvent_endMonth"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="71dp"
        android:entries="@array/end_year_arrays" />

    <Spinner
        android:id="@+id/createEvent_endMin"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/createEvent_startMin"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:entries="@array/end_minute_arrays" />

    <EditText
        android:id="@+id/createEvent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/create_event_name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/Btn_createEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_desc_input"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="39dp"
        android:text="@string/btn_create_event" />

    <EditText
        android:id="@+id/event_desc_input"
        android:layout_width="322dp"
        android:layout_height="136dp"
        android:layout_below="@+id/createEvent_startYear"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/event_desc"
        android:importantForAutofill="no"
        android:inputType="textMultiLine" />


</RelativeLayout>